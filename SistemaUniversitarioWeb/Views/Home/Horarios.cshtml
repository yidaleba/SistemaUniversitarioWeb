@model IEnumerable<SistemaUniversitarioWeb.Models.HorarioVM>
@{
    ViewBag.Title = "Horarios";
}

<h2>Horarios</h2>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-header">
        <strong>Filtrar Horarios</strong>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Horarios", "Home", FormMethod.Get, new { id = "formFiltros" }))
        {
            <div class="row">
                <div class="col-md-4">
                    <label for="carrera">Carrera</label>
                    @Html.DropDownList("carrera", ViewBag.Carreras as SelectList, "-- Todos --", new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label for="semestre">Semestre</label>
                    @Html.DropDownList("semestre", ViewBag.Semestres as SelectList, "-- Todos --", new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <label for="materia">Materia</label>
                    @Html.DropDownList("materia", ViewBag.Materias as SelectList, "-- Todos --", new { @class = "form-control" })
                </div>
            </div>
        }
    </div>
</div>


<!-- Tabla de resultados -->
<div id="tablaHorarios">
    @Html.Partial("_TablaHorarios", Model)
</div>

<!-- Formulario oculto para edición -->
<div id="formularioEditar" class="collapse mt-3 card p-3">
    <h4>Editar Horario</h4>

    @using (Html.BeginForm("EditarHorario", "Home", FormMethod.Post))
    {

        @Html.Hidden("Codigo")
        @Html.Hidden("Id")
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.Label("Materia")
                <input type="text" id="editMateria" class="form-control" disabled />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("Carrera")
                <input type="text" id="editCarrera" class="form-control" disabled />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("Semestre")
                <input type="number" name="Semestre" id="editSemestre" class="form-control" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.Label("Grupo")
                <input type="number" name="Grupo" id="editGrupo" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("N° Estudiantes")
                <input type="number" name="CantEstudiantes" id="editCantEstudiantes" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("Docente")
                <input type="text" id="editDocente" class="form-control" disabled />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.Label("Día")
                <input type="text" name="Dia" id="editDia" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("Hora Inicio")
                <input type="text" name="HoraInicio" id="editHoraInicio" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                @Html.Label("Hora Fin")
                <input type="text" name="HoraFin" id="editHoraFin" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-success">Guardar Cambios</button>
        <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#formularioEditar">Cancelar</button>
    }
</div>
<div class="mt-4 mb-4">
    <button type="button" class="btn btn-success" data-toggle="collapse" data-target="#formularioAgregarHorario">
        <i class="fa fa-plus"></i> Agregar Horario
    </button>
</div>
<div id="formularioAgregarHorario" class="collapse mt-3 card p-3">
    <h4>Agregar Nuevo Horario</h4>

    @using (Html.BeginForm("AgregarHorario", "Home", FormMethod.Post))
    {
        <div class="form-row">
            <!-- Materia -->
            <div class="form-group col-md-6">
                @Html.Label("Materia")
                @Html.DropDownList("MateriaId", ViewBag.Materias as SelectList, "-- Selecciona --", new { @class = "form-control" })
            </div>

            <!-- Grupo -->
            <div class="form-group col-md-6">
                @Html.Label("Grupo")
                @Html.DropDownList("Grupo", Enumerable.Range(1, 20).Select(x => new SelectListItem { Text = x.ToString(), Value = x.ToString() }), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-row">
            <!-- N° Estudiantes -->
            <div class="form-group col-md-6">
                @Html.Label("N° Estudiantes")
                @Html.TextBox("CantEstudiantes", null, new { @class = "form-control", placeholder = "Ej: 30" })
            </div>

            <!-- Cantidad de días -->
            <div class="form-group col-md-6">
                @Html.Label("Cantidad de Días")
                <select id="numDias" class="form-control">
                    <option value="">-- Selecciona --</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
        </div>

        <!-- Contenedor para días dinámicos -->
        <div id="contenedorDias"></div>

        <!-- Botón Guardar -->
        <button type="submit" class="btn btn-primary">Guardar Horario</button>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function cargarHorarios() {
            $.ajax({
                url: $('#formFiltros').attr('action'),
                type: 'GET',
                data: $('#formFiltros').serialize(),
                success: function (result) {
                    $('#tablaHorarios').html(result);
                }
            });
        }

        $(document).ready(function () {

            // Manejo de filtros
            $('#carrera, #semestre, #materia').change(function () {
                $('#formFiltros').submit();
            });

            $('#formFiltros').on('submit', function (e) {
                e.preventDefault();
                cargarHorarios();
            });

            // Cargar automáticamente al inicio
            cargarHorarios();

            // Botón EDITAR (fila)
            $(document).on('click', '.btn-edit', function () {
                var row = $(this).closest('tr');

                row.find('.view-mode').hide();
                row.find('.edit-mode').show();

                $(this).hide();
                row.find('.btn-save').show();
            });

            // Botón GUARDAR (fila)
            $(document).on('click', '.btn-save', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');
                var docenteMateriaId = row.data('docente-materia-id'); // Para actualizar DocenteMateria
                var docenteSeleccionado = row.find('[name=Docente]').val(); // Valor del dropdown

                var grupo = row.find('[name=Grupo]').val() || row.find('[name=Grupo]').siblings('.view-mode').text().trim();
                var cantEstudiantes = row.find('[name=CantEstudiantes]').val() || row.find('[name=CantEstudiantes]').siblings('.view-mode').text().trim();
                var dia = row.find('[name=Dia]').val() || row.find('[name=Dia]').siblings('.view-mode').text().trim();
                var horaInicio = row.find('[name=HoraInicio]').val() || row.find('[name=HoraInicio]').siblings('.view-mode').text().trim();
                var horaFin = row.find('[name=HoraFin]').val() || row.find('[name=HoraFin]').siblings('.view-mode').text().trim();

                $.post('@Url.Action("EditarHorario", "Home")', {
                    Id: id,
                    Grupo: parseInt(grupo),
                    CantEstudiantes: parseInt(cantEstudiantes),
                    Dia: dia,
                    HoraInicio: horaInicio,
                    HoraFin: horaFin,
                    DocenteId: parseInt(docenteSeleccionado)
                }, function (response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                }).fail(function (xhr) {
                    try {
                        var response = JSON.parse(xhr.responseText);
                        alert("Error al guardar: " + response.message);
                    } catch (e) {
                        alert("Hubo un error al guardar los cambios.");
                    }
                });
            });

            // Botón ELIMINAR
            $(document).on('click', '.btn-delete', function () {
                var row = $(this).closest('tr');
                var id = row.data('id'); // Usamos el Id real

                if (!confirm("¿Estás seguro de eliminar este horario?")) return;

                $.post('@Url.Action("EliminarHorario", "Home")', { id: id }, function (response) {
                    alert("Horario eliminado exitosamente.");
                    row.remove(); // Eliminar fila visualmente
                }).fail(function () {
                    alert("Hubo un error al eliminar el horario.");
                });
            });

            // Generar campos de día, hora inicio y fin dinámicamente
            $('#numDias').change(function () {
                var numDias = parseInt($(this).val());
                var contenedor = $('#contenedorDias');
                contenedor.empty();

                if (!numDias || numDias <= 0) return;

                for (var i = 0; i < numDias; i++) {
                    var index = i + 1;
                    var diaSelect = `
                    <div class="form-row mb-2">
                        <div class="col-md-4">
                            <label>Día ${index}</label>
                            <select name="Dia${index}" class="form-control dias-select">
                                <option value="">-- Selecciona --</option>
                                <option value="Lunes">Lunes</option>
                                <option value="Martes">Martes</option>
                                <option value="Miércoles">Miércoles</option>
                                <option value="Jueves">Jueves</option>
                                <option value="Viernes">Viernes</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Hora Inicio</label>
                            <select name="HoraInicio${index}" class="form-control">
                                <option value="">-- Selecciona --</option>
                                <option value="07:00">07:00</option>
                                <option value="08:00">08:00</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="11:00">11:00</option>
                                <option value="12:00">12:00</option>
                                <option value="13:00">13:00</option>
                                <option value="14:00">14:00</option>
                                <option value="15:00">15:00</option>
                                <option value="16:00">16:00</option>
                                <option value="17:00">17:00</option>
                                <option value="18:00">18:00</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Hora Fin</label>
                            <select name="HoraFin${index}" class="form-control">
                                <option value="">-- Selecciona --</option>
                                <option value="08:00">08:00</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="11:00">11:00</option>
                                <option value="12:00">12:00</option>
                                <option value="13:00">13:00</option>
                                <option value="14:00">14:00</option>
                                <option value="15:00">15:00</option>
                                <option value="16:00">16:00</option>
                                <option value="17:00">17:00</option>
                                <option value="18:00">18:00</option>
                                <option value="19:00">19:00</option>
                            </select>
                        </div>
                    </div>`;

                    contenedor.append(diaSelect);
                }
            });
        });
    </script>


}